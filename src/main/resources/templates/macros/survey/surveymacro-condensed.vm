#if ($config.locked) <img src="${workaroundRequireResourcePath}/icons/${iconSet}/locked.png" border="0" height="16" width="16"
                          title="$action.getText("surveyplugin.survey.locked")."/> #end
<table class="voteTable condensed">
  <thead>
  <tr>
    <th>$action.getText("surveyplugin.vote.title")</th>
    #set ($firstBallot = $survey.ballots.get(0))
    #set ($choiceIndex=$firstBallot.choices.size() - 1 )
    #foreach($choice in $firstBallot.choices)
      #set($choiceDescriptionWithHtml = $choice.descriptionWithRenderedLinks)
      <th>$firstBallot.getCurrentValueByIndex($choiceIndex)<br/>$choiceDescriptionWithHtml</th>
      #set ($choiceIndex = $choiceIndex - 1)
    #end
  </tr>
  </thead>
  <tbody>
    #foreach ($ballot in $survey.ballots)

      #set ($config = $ballot.config)
      #set ($canVote = ($config.canTakeSurvey && (!($ballot.getHasVoted($currentUser)) || $config.changeableVotes)))
      #set ($voteAnchor = $generalUtil.urlEncode("survey-ballot-${ballot.titleNoSpace}"))

    <tr>
      #set($ballotTitleWithHtml = $ballot.titleWithRenderedLinks)
      #set($ballotDescriptionWithHtml = $ballot.descriptionWithRenderedLinks)
      <td>$ballotTitleWithHtml #if($ballotDescriptionWithHtml.length()>0)<br/><sub>$ballotDescriptionWithHtml</sub>#end <a id="$voteAnchor"/></td>
      #foreach ($choice in $ballot.choices)
        <td align="center">
          #if ($canVote && !($config.locked))
            #if ($choice.getHasVotedFor($currentUser))
              <img class="castunvote surveyIcon" src="${workaroundRequireResourcePath}/icons/${iconSet}/green-yes.png" border="0" align="absmiddle" height="16" width="16"
                   alt="$ballot.title" voteanchor="$voteAnchor" contentid="$macroResult.contentId" title="$choice.description"/>
            #else
              <img class="castvote surveyIcon" src="${workaroundRequireResourcePath}/icons/${iconSet}/blue-yes.png" border="0" align="absmiddle" height="16" width="16"
                   alt="$ballot.title" voteanchor="$voteAnchor" contentid="$macroResult.contentId" title="$choice.description"/>
            #end
          #elseif ($choice.getHasVotedFor($currentUser))
            <img src="${workaroundRequireResourcePath}/icons/${iconSet}/green-yes.png" border="0" align="absmiddle" height="16" width="16"/>
          #else
            <img src="${workaroundRequireResourcePath}/icons/${iconSet}/gray-yes.png" border="0" align="absmiddle" height="16" width="16"/>
          #end
        </td>
      #end
    </tr>
    #end
  </tbody>
</table>
